<!--Tem que ter a div antes do form para que o formulario nao valide os dois form ao mesmo tempo-->
<div>
    <form asp-action="Index"
          method="post"
          id="testform1"
          onsubmit="validateForm(event, 'testform1')"
          novalidate>
        <div>
            <div class="row">
                <div class="col-md-6">
                    <label for="email"
                           class="form-label">
                        Email address
                    </label>
                    <input id="email"
                           class="form-control"
                           name="email"
                           placeholder="name@example.com"
                           type="email"
                           minlength="10"
                           required>
                    <div class="invalid-feedback">
                        Preencha o campo com um e-mail válido.
                    </div>
                </div>

                <div class="col-md-6">
                    <label for="price"
                           class="form-label">
                        Price
                    </label>
                    <!--Regex que valida valor do preco para que seja superior a 0,00-->
                    <input id="price"
                           class="form-control money"
                           name="price"
                           placeholder="0,00"
                           minlength="3"
                           pattern="^(?!0,00$)([0-9]{1,3}(\.[0-9]{3})*,[0-9]{2}|0,[0-9]{2}|[1-9][0-9]*,[0-9]{2})$"
                           required>
                    <div class="invalid-feedback">
                        Preencha o campo com um price válido.
                    </div>
                </div>
            </div>

            <div class="row mt-5">
                <div class="col-md-6">
                    <div class="mb-2">
                        <label class="form-check-label">
                            Receive email?
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               name="flexRadioDefault"
                               value="True"
                               id="option1"
                               required>
                        <label class="form-check-label"
                               for="option1">
                            Yes
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input"
                               type="radio"
                               name="flexRadioDefault"
                               value="False"
                               id="option2"
                               required>
                        <label class="form-check-label"
                               for="option2">
                            No
                        </label>
                        <div class="invalid-feedback">
                            More example invalid feedback text
                        </div>
                    </div>

                </div>

                <div class="col-md-6">
                    <label class="form-label"
                           for="dataId">
                        Data
                    </label>
                    <input class="form-control"
                           type="date"
                           name="data"
                           id="dataId"
                           autocomplete="off"
                           role="presentation"
                           title="data"
                           value=""
                           min="2024-06-01"
                           required />
                    <div class="invalid-feedback">
                        Preencha o campo com uma data válida.
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <label for="name"
                           class="form-label">
                        Name
                    </label>
                    <input id="name"
                           class="form-control"
                           name="name"
                           placeholder="user"
                           type="hidden"
                           minlength="3"
                           required>
                    <div class="invalid-feedback">
                        Hidden field.
                    </div>
                </div>

                <div class="row mt-5 mb-5">
                    <div class="col-md-6 text-end">
                        <button class="btn btn-secondary">
                            Cancelar
                        </button>
                    </div>

                    <div class="col-md-6 text-start">
                        <button class="btn btn-primary"
                                type="submit">
                            Salvar
                        </button>
                    </div>
                </div>
            </div>
    </form>
</div>


